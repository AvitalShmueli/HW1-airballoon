<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/main_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/sky" />

    <LinearLayout
        android:id="@+id/hearts_Layout"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/heart" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/obstacles_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@id/hearts_Layout"
        android:layout_above="@id/airBalloons_Layout"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_bird_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/bird" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/airBalloons_Layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@id/buttons"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_airballoon1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_default"
            android:layout_weight="1"
            android:src="@drawable/airballoon" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_airballoon2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_default"
            android:layout_weight="1"
            android:src="@drawable/airballoon" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_airballoon3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_default"
            android:layout_weight="1"
            android:src="@drawable/airballoon" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginHorizontal="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/baseline_arrow_circle_left_24"
            android:layout_alignParentLeft="true"
            app:tint="@color/purple900"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/baseline_arrow_circle_right_24"
            app:tint="@color/purple900"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

</RelativeLayout>